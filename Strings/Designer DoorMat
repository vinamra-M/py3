N, M = map(int, input().split())

b = (N-1)//2
c = (M-7)//2

for a in range(b):
    print(('-'*3*(b-a) + '.' + '|..'*a) + ('|') + ('..|'*a + '.' + '-'*3*(b-a)))

for a in range(b, b+1):
    print('-'*c + 'WELCOME' + '-'*c)

for a in range(b):
    print('-'*3*(a+1) + '.' + '|..'*(b-a-1) + ('|') + ('..|'*(b-a-1) + '.' + '-'*3*(a+1)))
